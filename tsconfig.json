{
  /* Visit https://www.typescriptlang.org/tsconfig to read more about this file */
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",

    /* Specify ECMAScript target version to compile to:
      'ES3' (default), 'ES5', 'ES2015' (ES6), 'ES2016' (ES7), 'ES2017' (ES8),
      'ES2018' (ES9), 'ES2019' (ES10), 'ES2020' (ES11), 'ES2021' (ES12),
      'ESNEXT' (preview features of the next version)*/
    "target": "es2021",
    /* Specify module code generation:
      es: 'es2015', 'es2020', 'esnext'
      node: 'commonjs' */
    "module": "commonjs",
    "lib": ["dom", "esnext"],
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "useDefineForClassFields": true,
    "resolveJsonModule": true,
    "noEmit": true,

    "strict": false,
    "alwaysStrict": false,
    "removeComments": false,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,

    "sourceMap": true,
    "watch": false
  },
  "include": ["./src"],
  "exclude": ["node_modules/**/*", ".eslintrc.js"]
}
